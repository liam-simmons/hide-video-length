{
  "manifest_version": 2,
  "name": "Video Length Hider",
  "version": "1.0",

  "description": "Hide video lengths",

  "background": {
    "scripts": [
      "build/background.js"
    ]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "build/assets/icons/ext-icon.svg"
    },
    "default_title": "Video Length Hider",
    "default_popup": "/build/popup.html"
  },

  "options_ui": {
    "page": "build/options.html"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["build/content.js"]
    }
  ],

  "permissions": [
    "storage"
  ]
}